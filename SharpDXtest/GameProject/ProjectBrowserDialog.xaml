<Window x:Class="Editor.GameProject.ProjectBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor.GameProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Project Browser" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" Grid.Row="0">
            <ToggleButton x:Name="OpenProjectButton" Content="Open Project" Click="OpenProjectButton_OnClick" IsChecked="True" FontSize="32"/>
            <ToggleButton x:Name="CreateProjectButton" Content="Create Project" Click="CreateProjectButton_OnClick" FontSize="32" Margin="30,0,0,0"/>
        </StackPanel>
        <StackPanel x:Name="BrowserContent" Orientation="Horizontal" Grid.Row="1">
            <local:OpenProjectView/>
            <local:CreateProjectView/>
        </StackPanel>
    </Grid>
</Window>