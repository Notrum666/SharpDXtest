<ResourceDictionary x:Class="Editor.ToolStyle"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ToolControl" TargetType="Control">
        <Setter Property="Focusable" Value="True"/>
        <EventSetter Event="MouseDown" Handler="ToolControl_MouseDown"/>
    </Style>
</ResourceDictionary>