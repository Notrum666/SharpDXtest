<?xml version="1.0" encoding="utf-8" ?>
<Scene>
	<Assets>
		<Models>
			<Model path="Ball.obj"/>
			<Model path="Cube.obj"/>
		</Models>

		<Textures>
			<Texture path="Sun.jpg"/>
			<Texture path="Prototype.png"/>
			<Texture path="Prototype_Light.png"/>
		</Textures>
	</Assets>
	
	<GameObject x.Name="CameraObject">
		<Transform>
			<Transform.Position y="-5" z="5"/>
		</Transform>
		<Camera IsCurrent="true" Aspect="1.7777" Near="0.001" Far="500" FOV="1.7777"/>
		<SoundListener IsCurrent="true"/>
		<CameraController speed="5"/>
	</GameObject>

	<GameObject>
		<Transform>
			<Transform.LocalScale x="50" y="50" z="0.5"/>
		</Transform>
		<Mesh model="{Model Cube}">
			<Mesh.Material Albedo="{Texture Prototype}"/>
		</Mesh>
	</GameObject>

	<GameObject>
		<Transform>
			<Transform.LocalPosition x="5" z="2"/>
		</Transform>
		<PointLight Radius="10"/>
	</GameObject>
	
	<GameObject>
		<Transform>
			<Transform.LocalPosition x="-5" z="2"/>
		</Transform>
		<PointLight Radius="10"/>
	</GameObject>
</Scene>