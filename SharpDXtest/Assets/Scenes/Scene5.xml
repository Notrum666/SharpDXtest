	<GameObject>
		<Transform>
			<Transform.Position z="60"/>
		</Transform>
		<GasVolume>
			<GasVolume.Size x="200" y="200" z="50"/>
		</GasVolume>
	</GameObject>
	
	<GameObject>
		<Transform>
			<Transform.Position z="2"/>
			<Transform.LocalScale x="1" y="1" z="2"/>
			<Transform.LocalRotation x="0" y="45" z="0"/>
		</Transform>
		<MeshComponent mesh="{Mesh Cube}">
			<MeshComponent.Material Albedo="{Texture Prototype}"/>
		</MeshComponent>
	</GameObject>
	
	<GameObject>
		<Transform>
			<Transform.LocalScale x="50" y="50" z="0.5"/>
		</Transform>
		<MeshComponent mesh="{Mesh Cube}">
			<MeshComponent.Material Albedo="{Texture Prototype}"/>
		</MeshComponent>
	</GameObject>

	<GameObject>
		<Transform>
			<Transform.LocalPosition x="5" z="3"/>
		</Transform>
		<PointLight Radius="10"/>
	</GameObject>
	
	<GameObject>
		<Transform>
			<Transform.LocalPosition x="-5" z="3"/>
		</Transform>
		<PointLight Radius="10"/>
	</GameObject>

	<GameObject>
		<Transform>
			<Transform.LocalPosition y="-5" z="3"/>
		</Transform>
		<PointLight Radius="10"/>
	</GameObject>

	<GameObject>
		<Transform>
			<Transform.LocalPosition y="5" z="3"/>
		</Transform>
		<PointLight Radius="10"/>
	</GameObject>
