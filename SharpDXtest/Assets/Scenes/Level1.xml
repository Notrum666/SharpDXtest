<?xml version="1.0" encoding="utf-8" ?>
<Scene>
  <Assets>
    <Models>
      <Model path="cube.obj"/>
    </Models>
    
    <Textures>
      <Texture path="template.png"/>
    </Textures>
    
    <Sounds>
      <Sound path="sample.wav"/>
    </Sounds>
  </Assets>

  <GameObject>
    <Transform>
      <Transform.Position x="0" y="0" z="0"/>
      <Transform.Rotation/>
    </Transform>
    <Camera IsCurrent="true" resolution="1.7777" near="0.001" far="100" FOV="1.5"/>
    <SoundListener IsCurrent="true"/>
    <Controller speed="5" cube="{Reference Cube}"/>
  </GameObject>

  <GameObject x.Name="Cube">
    <Transform>
      <Transform.Position x="0" y="0" z="0"/>
    </Transform>
    <Rigidbody Mass="1">
      <Rigidbody.Material Friction="0.5" Bounciness="1.0" BouncinessCombineMode="Maximum"/>
    </Rigidbody>
    <CubeCollider>
      <CubeCollider.Size x="2" y="2" z="2"/>
    </CubeCollider>
    <SoundSource/>
    <CubeScript/>
    <Mesh model="{Model cube}">
      <!--<Mesh.material Texture="{Texture template}"/>-->
    </Mesh>
  </GameObject>

  <GameObject>
    <Transform>
      <Transform.Position x="0" y="5" z="0"/>
    </Transform>
    <Rigidbody Mass="1">
      <Rigidbody.Material Friction="0.5" Bounciness="0.0" BouncinessCombineMode="Minimum"/>
    </Rigidbody>
	  <CubeCollider>
		  <CubeCollider.Size x="2" y="2" z="2"/>
	  </CubeCollider>
    <Mesh model="{Model cube}">
      <Mesh.material Metallic="1" Roughness="0.01"/>
    </Mesh>
  </GameObject>

  <GameObject>
    <Transform>
      <Transform.Position x="0" y="0" z="2"/>
    </Transform>
    <PointLight Radius="10" Brightness="1" Intensity="1"/>
  </GameObject>
  
</Scene>