<?xml version="1.0" encoding="utf-8" ?>
<Scene>
	<Assets>
		<Models>
			<Model path="cube.obj"/>
			<Model path="sphere.obj"/>
		</Models>

		<Textures>
			<Texture path="template.png"/>
			<Texture path="brick_wall_normal.png"/>
		</Textures>

		<Sounds>
			<Sound path="sample.wav"/>
		</Sounds>
	</Assets>

	<GameObject>
		<Transform>
			<Transform.Position x="5" y="2"/>
			<Transform.Rotation z="90"/>
		</Transform>
		<Camera IsCurrent="true" Aspect="1.7777" Near="0.001" Far="100" FOV="1.5"/>
		<SoundListener IsCurrent="true"/>
		<Controller speed="5" cube="{Reference Cube}"/>
		<SpotLight Angle="1.7777" Radius="10"/>
	</GameObject>

	<GameObject x.Name="Cube">
		<Transform>
			<Transform.Position y="1.5" z="-0.5"/>
			<Transform.Rotation/>
		</Transform>
		<Rigidbody Mass="1">
			<Rigidbody.Material Bounciness="1.0"/>
		</Rigidbody>
		<CubeCollider Enabled="false">
			<CubeCollider.Size x="2" y="2" z="2"/>
		</CubeCollider>
		<!--<SphereCollider Enabled="false" Radius="1"/>-->
		<SoundSource/>
		<CubeScript/>
		<Mesh model="{Model cube}">
			<Mesh.Material>
				<Material Normal="{Texture brick_wall_normal}"/>
			</Mesh.Material>
		</Mesh>
	</GameObject>

	<GameObject>
		<Transform>
			<Transform.Position x="0" y="2.5" z="0.5"/>
			<Transform.Rotation x="0"/>
		</Transform>
		<Rigidbody Mass="1">
			<Rigidbody.Material Bounciness="1.0"/>
		</Rigidbody>
		<CubeCollider Enabled="false">
			<CubeCollider.Size x="2" y="2" z="2"/>
		</CubeCollider>
		<!--<SphereCollider Enabled="false" Radius="1"/>-->
		<Mesh model="{Model cube}">
			<Mesh.Material>
				<Material Normal="{Texture brick_wall_normal}"/>
			</Mesh.Material>
		</Mesh>
	</GameObject>
</Scene>