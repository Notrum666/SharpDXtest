<?xml version="1.0" encoding="utf-8" ?>
<Scene>
	<Assets>
		<Models>
			<Model path="cube.obj"/>
		</Models>

		<Textures>
			<Texture path="template.png"/>
			<Texture path="brick_wall_normal.png"/>
		</Textures>

		<Sounds>
			<Sound path="sample.wav"/>
		</Sounds>
	</Assets>

	<GameObject>
		<Camera IsCurrent="true" Aspect="1.77" Near="0.001" Far="100" FOV="1.5"/>
		<SoundListener IsCurrent="true"/>
		<Controller speed="5" cube="{Reference Cube}"/>
	</GameObject>

	<GameObject x.Name="Cube">
		<Rigidbody Mass="1">
			<Rigidbody.Material Friction="0.5" Bounciness="1.0"/>
		</Rigidbody>
		<SphereCollider/>
		<SoundSource/>
		<Mesh model="{Model cube}">
			<Mesh.Material>
				<Material Normal="{Texture brick_wall_normal}"/>
			</Mesh.Material>
		</Mesh>
	</GameObject>
</Scene>