<?xml version="1.0" encoding="utf-8" ?>
<Scene>
  <Assets>
    <Models>
      <Model path="alliance_statue.obj"/>
    </Models>
    <Textures>
      <Texture path="white.jpg"/>
    </Textures>
  </Assets>

  <GameObject x.Name="Camera">
    <Transform>
      <Transform.Position x="30"/>
      <Transform.Rotation z="90"/>
    </Transform>
    <Camera IsCurrent="true" Aspect="1.7777" Near="0.001" Far="100" FOV="1.7777"/>
    <CameraController speed="10"/>
  </GameObject>

  <GameObject x.Name="Warrior">
    <Transform>
      <Transform.Position x="0" y="0" z="0"/>
      <Transform.LocalScale x="0.1" y="0.1" z="0.1"/>
      <Transform.Rotation x="90"/>
    </Transform>
    <Mesh model="{Model alliance_statue}">
      <Mesh.Material Albedo="{Texture white}" AmbientOcclusion="{Texture white}"/>
    </Mesh>
  </GameObject>
  
  <GameObject x.Name="Light">
    <Transform>
      <Transform.Position x="0" y="20" z="50"/>
    </Transform>
    <AmbientLight Brightness="1000"/>
  </GameObject>

</Scene>
